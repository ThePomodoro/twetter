<div class="clearfix top-space small"></div>
<div class="row">

  <%= render :partial => 'shared/left_nav' %>

  <div class="panel panel-default col-md-8 text-left">
    <div class="pull-left">
      <h4><%= @user.username %></h4>
      <div>
        <div class = "gravatar"><img src= "<%= @user.gravatar %>">
        </div>
        <p class="text-muted"><%= @user.name %>'s' Twets.</p>
      </div>
    </div>
    <div class="clearfix"></div>
    <hr />
    <ol class="list-unstyled">
      <% @twets.each do |twet| -%>
      <li>
        <%= content_tag :strong, twet.content, :class => 'pull-left text-middle' %>
        <%= content_tag :span, twet.created_at, :class => 'text-muted pad-10 text-middle' %>
        <div class="clearfix"></div>
      </li>
      <li><hr></li>
      <% end -%>
    </ol>
  </div>
</div>